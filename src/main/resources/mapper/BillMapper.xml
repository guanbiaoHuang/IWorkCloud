<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iworkcloud.mapper.BillMapper">


    <resultMap id="monthBill" type="com.iworkcloud.pojo.BillMonthCount">
        <result column="time" jdbcType="INTEGER" property="month"/>
        <result column="mount" jdbcType="DOUBLE" property="monthCount"/>
        <result column="tag" jdbcType="VARCHAR" property="tag"/>
    </resultMap>

    <insert id="insertBill" parameterType="com.iworkcloud.pojo.Bill">
        insert into bill (ID,TIME,MOUNT,TAG,DETAILS) values (#{id},#{time},#{mount},#{tag},#{details})
    </insert>

    <update id="updateBillContent" parameterType="HashMap">
        update bill set time = #{time}, mount = #{mount}, tag = #{tag}, details = #{details} where id = #{id}
    </update>

    <select id="queryBillById" parameterType="int" resultType="com.iworkcloud.pojo.Bill">
        select * from bill where id = #{id}
    </select>

    <select id="queryBillsByTag" parameterType="String" resultType="com.iworkcloud.pojo.Bill">
        select * from bill where tag = #{tag}
    </select>

    <select id="queryBillNumOrderByMonth" parameterType="String" resultMap="monthBill">
        select date_format(time,'%m') as '月份', sum(bill.mount)as '月总计',tag from bill
        where tag = #{tag} and year(time) = year(now())
        group by (date_format(time,'%m'))
    </select>



</mapper>